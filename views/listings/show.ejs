<% layout('/layouts/boilerplate') -%>

  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Listing details</h3>
    </div>


    <div class="card col-12 col-md-8 offset-md-2">
      <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
      <div class="card-body">
        <p class="card-text">
          <b>
            <%= listing.title %>
          </b> <br>
          <%= listing.description %> <br>
            <b> &#8377;</b>
            <%= listing.price.toLocaleString('en-IN') %> / night <br>
              <%= listing.location %><b>,</b>
                <%= listing.country %>
        </p>
      </div>


    </div>

    <br>

    <div class="btns">
      <a class="btn show-both-btn btn-dark col-1 offset-md-2 edit-btn " href="/listings/<%=listing._id %>/edit">Edit</a>
      <br /><br />
      <form method="POST" action="/listings/<%= listing._id %>/?_method=DELETE">
        <Button class="btn btn-dark show-both-btn offset-md-2">delete</Button>
      </form>
    </div>




  </div>